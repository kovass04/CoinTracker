<Page
    x:Class="CoinTracker.Views.SelectedItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoinTracker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Go back" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

        <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="{Binding AssetsId.Rank}" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="{Binding AssetsId.Name}" FontSize="16"/>
            <TextBlock Text="{Binding AssetsId.Symbol}" FontSize="14" Opacity="0.6"/>
            <TextBlock Text="{Binding AssetsId.PriceUsd}" FontSize="18" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
