<Page
    x:Class="CoinTracker.Views.SelectedItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoinTracker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Go back" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding AssetsId.Name}" Margin="340,59,983,841" />

        <TextBlock x:Name="textBlock1" FontSize="24" TextWrapping="Wrap" Margin="1257,42,106,901"/>
        
        <ListView ItemsSource="{Binding AssetsId}" Margin="334,545,334,144">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}"  />
                        <TextBlock Text="{Binding Symbol}" />
                        <TextBlock Text="{Binding PriceUsd}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
