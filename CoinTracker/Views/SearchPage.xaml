<Page
    x:Class="CoinTracker.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoinTracker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Search" HorizontalAlignment="Center"/>
        <TextBox x:Name="SearchBox1" PlaceholderText="Enter search query" Margin="607,522,608,435" />
        <TextBox x:Name="SearchBox" PlaceholderText="Enter search query" Margin="607,571,602,374" />

        <TextBox x:Name="SearchTextBox" Text="{Binding SearchText, Mode=TwoWay}" PlaceholderText="Enter search text" Margin="0,0,906,534"/>


        <ListView ItemsSource="{Binding Asset}" Margin="903,10,10,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Rank}"  />
                        <TextBlock Text="{Binding Name}"  />
                        <TextBlock Text="{Binding Symbol}" />
                        <TextBlock Text="{Binding PriceUsd}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
